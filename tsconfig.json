{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./",
    "removeComments": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "lib": ["es2015", "dom"],
    "baseUrl": "./"
  },
  "exclude": [
      "node_modules",
      "dist"
  ]
}
